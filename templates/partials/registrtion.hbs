<div class="registerMain" id="register">
    <a href="javascript:void(0)" class="closeRegtr" onclick="closeRegister()">&times;</a>
    <div class="registerContent">
        <div class="registerImg">
            <div class="imgHead">
                <span>Wellcome Here</span>
                <p>Register To Become our User</p>
            </div>
            <div class="imgBottom">
                <img src="/images/img-1.png" alt="">
            </div>

        </div>
        <div class="registerForm">
            <form  id="registerForm" action="/" method="post">
                <div class="registerHead">Registration</div>
                <div class="Input_row">
                    <span>Frist Name</span>
                    <input type="text" name="firstname" id="firstname" placeholder=" Enter Your First Name"  required>
                </div>
                <div class="Input_row">
                    <span>Last Name</span>
                    <input type="text" name="lastname" id="lastname" placeholder=" Enter Your Last Name" required>
                </div>
                <div class="Input_row">
                    <span>Email</span>
                    <input type="email" name="email" id="email" placeholder=" Enter Your Email Address" required >
                </div>
                <div class="Input_row">
                    <span>Phone</span>
                    <input type="tel" name="phone" id="phone" placeholder=" Enter Your Phone Number" required>
                </div>
                <div class="Input_row">
                    <span>Password</span>
                    <input type="password" name="password" id="password" placeholder=" Enter Your Password"  required>
                </div>
                <div class="Input_row">
                    <span id="SpanCpassword">Confrim Password</span>
                    <input type="password" name="cpassword" id="cpassword" placeholder=" Confrim Your Password" required>
                </div>
                <div class="registerBtn">
                    <button type="submit" >Register</button>
                    <button type="reset">Reset</button>
                </div>
                <p class="LoginDetail"> If Already Register Then ? &nbsp;<a href="/login">Login</a></p>
            </form>
        </div>
    </div>
</div>